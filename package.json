{
  "name": "@mitz-it/elastic-apm-nest",
  "version": "1.0.0",
  "description": "Elastic APM for NestJS",
  "author": "Mitz IT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitz-it/nestjs-apm.git"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "rm -rf dist && tsc --target esnext --moduleResolution node",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build && npm run test",
    "build:test": "npm build && npm pack",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version --no-verify",
    "docker": "docker-compose -f docker/docker-compose.yml up -d"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">= 10.15.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.3",
    "@nestjs/core": "^8.0.3",
    "elastic-apm-node": "^3.43.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^8.0.3",
    "@nestjs/testing": "^8.0.3",
    "@types/jest": "24.0.17",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "prettier": "1.17.0",
    "rxjs": "^7.5.5",
    "standard-version": "^7.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.3",
    "@nestjs/core": "^8.0.3",
    "elastic-apm-node": "^3.43.0",
    "reflect-metadata": "^0.1.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
